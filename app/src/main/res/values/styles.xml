<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarSize">@dimen/abc_text_size_display_2_material</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textview" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:textColorPrimary">@color/white</item>
        </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/lightorange</item>
    </style>

    <style name="button">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/cornerradius</item>
        <item name="android:padding">@dimen/cornerradius</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="circlebutton">
        <item name="android:layout_margin">@dimen/cornerradius</item>
        <item name="android:padding">@dimen/cornerradius</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/circlebutton</item>
    </style>
</resources>
